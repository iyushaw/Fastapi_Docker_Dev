{
    "editor.formatOnSave": true,
    "python.pipenvPath": "env/bin/python3",
    "python.sortImports.args": [
        "--profile=black",
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=119"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
}